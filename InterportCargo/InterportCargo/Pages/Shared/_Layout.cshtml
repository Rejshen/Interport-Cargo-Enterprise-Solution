<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - InterportCargo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">InterportCargo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                @{
                    var role = Context.Session.GetString("UserRole");
                    var email = Context.Session.GetString("UserEmail");
                }
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/RegisterCustomer">Customer: Register </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/RegisterEmployee">Employee: Register</a>
                    </li>
                    @if (role == "Customer")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Quotation/Create">Submit a Quotation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Quotation/MyQuotations">My Quotations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Customers/Messages">Messages</a>
                        </li>
                    }
                    
                    <!-- ✅ Officer-only link -->
                    @if (role == "QuotationOfficer")
                    {
                        <li class="nav-item">
                            <a class="nav-link t" asp-page="/Officer/Requests">Officer: Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Officer/Rates">Officer: Rate Schedule</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Officer/Notifications/Index">Officer: Notifications</a>
                        </li>
                    }
                </ul>
                
                <ul class="navbar-nav ms-auto">
                    @if (string.IsNullOrEmpty(email))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Users/Login">Login</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-light">Hello, @email (@role)</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Users/Logout">Logout</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
